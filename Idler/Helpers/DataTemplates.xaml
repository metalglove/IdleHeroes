<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Idler.Helpers"
                    xmlns:viewModels="clr-namespace:Idler.ViewModels"
                    xmlns:views="clr-namespace:Idler.Views">

    <viewModels:ContainerViewModel x:Key="ContainerViewModel"/>
    <DataTemplate DataType="{x:Type viewModels:ContainerViewModel}">
        <views:ContainerView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type viewModels:GameViewModel}">
        <views:GameView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type viewModels:HeroesViewModel}">
        <views:HeroesView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type viewModels:ItemsViewModel}">
        <views:ItemsView/>
    </DataTemplate>
</ResourceDictionary>